<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/crafting.css" />
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/crafting/crafting.js" />
        <include src="file://{resources}/scripts/crafting/crafting_item.js" />
        <include src="file://{resources}/scripts/crafting/crafting_recipe.js" />
        <include src="file://{resources}/scripts/crafting/crafting_section.js" />
        <include src="file://{resources}/scripts/crafting/crafting_list.js" />
    </scripts>
    <snippets>
        <snippet name="Crafting_Section">
            <Panel class="CraftingSection">
                <Panel id="Toggle">
                    <Label id="CraftingSectionTitle"/>
                    <Image id="FoldIcon"/>
                </Panel>
                <!-- Crafting_Recipes -->
            </Panel>
        </snippet>

        <snippet name="Crafting_Recipe">
            <Panel class="CraftingRecipe">
                <!-- Crafting_Items -->
            </Panel>
        </snippet>

        <snippet name="Crafting_Item">
            <Panel class="CraftingItem">
                <Image id="Item" onmouseover="ShowToolTip()" onmouseout="HideToolTip()"></Image>
            </Panel>
        </snippet>
    </snippets>

    <Panel class="CraftingRoot">
        <Panel id="CraftingTitlePanel">
            <Label id="CraftingListTitle" text="#itt_craft_menu" />
            <Image id="CloseIcon" onactivate="CloseList()"/>
        </Panel>
    </Panel>
</root>